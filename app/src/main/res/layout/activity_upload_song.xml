<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload_info"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="20dp"

            android:text="@string/songTitle"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/upload_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:text="@string/genre"
            android:textColor="@android:color/white" />

        <Spinner
            android:id="@+id/upload_song_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/upload_song_find_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/selectFile" />

        <TextView
            android:id="@+id/upload_song_file_name"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/upload_song_cancel"
                android:layout_width="126dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="30dp"
                android:text="@string/cancel" />

            <Button

                android:id="@+id/upload_song_done"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:text="@string/uploadSong" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>