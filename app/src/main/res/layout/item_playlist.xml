<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_playlist_layout"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/mtrl_card_spacing"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mtrl_card_spacing"
        android:orientation="vertical"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/track_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_playlist_add"/>

        <!-- <TextView
                    android:id="@+id/item_playlist_author"
                    style="@style/ItemAuthorTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/default_track_author"
                    android:textColor="@color/colorPrimaryDark" />-->

    </LinearLayout>

    <TextView
        android:id="@+id/track_title"
        style="@style/ItemTitleTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_margin="@dimen/mtrl_card_spacing"
        android:layout_marginBottom="10dp"
        android:text="@string/fragment_playlists"
        android:textColor="@color/colorWhite"
        android:textSize="10sp" />


</LinearLayout>